<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @organization.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @organization.description %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organization.departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.organization.name %></td>
        <td><%= link_to 'Show', department_path(:organization_id => @organization.id) %></td>
        <td><%= link_to 'Edit', edit_department_path(:organization_id => @organization.id) %></td>
        <td><%= link_to 'Destroy', 'departments#destroy', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'departments/form' %>



<br>

<%= link_to 'Edit', edit_organization_path(@organization) %> |
