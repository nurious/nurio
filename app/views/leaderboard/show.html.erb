<h3 class="text-center" id="leaderboard-title"><%= "#{current_user.organization.name}" %> Leaderboard</h3>

<table class="table table-background">
	<th class="text-center">Rank</th>
	<th class="text-center">User</th>
	<th class="text-center">Points</th>

<% n = 1 %>
<% @users.each do |user| %>
	<tr>
	<td class="text-center leaderboard-user-rank"><%= n %>.</td>
	<td class="text-center leaderboard-user-name"><%= user.email %></td> 
	<td class="text-center leaderboard-user-score"><%= number_with_delimiter(current_user.score, :delimiter => ',') %></td>
	<% n += 1 %>
	</tr>
<% end %>

</table>
