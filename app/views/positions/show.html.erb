<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @position.name %>
</p>

<p>
  <strong>Department:</strong>
  <%= @position.department.name %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @position.categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.position.name %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Category', new_position_category_path(@position) %>
<br><br>

<%= link_to 'Edit', edit_position_path(@position) %> |
<%= link_to 'Back', department_positions_path(@position.department.id) %>
